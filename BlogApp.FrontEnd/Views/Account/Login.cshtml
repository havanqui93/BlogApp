@{
    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta name="viewport" content="width=device-width">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="~/lib/iziToast/css/iziToast.min.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="form-signin">
        <div class="left">
            <img src="https://images.unsplash.com/photo-1520962922320-2038eebab146?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2000&q=80" />
        </div>
        <div class="right">
            <div class="form-body">
                <div class="section-login">
                    <div class="wrapper-login">
                        <h3 class="title-form">Login</h3>
                        <div class="inline-group">
                            <i class="bi bi-person"></i>
                            <input type="email" name="Email" placeholder="Email" maxlength="100" autocomplete="off" value="haqui1993@gmail.com" />
                        </div>
                        <div class="inline-group">
                            <i class="bi bi-key"></i>
                            <input type="password" name="Password" placeholder="Password" maxlength="100" value="123456" />
                        </div>
                        <div class="inline-group bottom">
                            <a href="#" class="link-action">Sign Up</a>
                            <button class="btn btn-action btn-signin">Sign In</button>
                        </div>
                    </div>
                    <div class="wrapper-register hide">
                        <h3 class="title-form">Register</h3>
                        <div class="inline-group register-group">
                            <i class="bi bi-person-plus"></i>
                            <input type="text" name="FirstName" placeholder="First Name" maxlength="100" />
                        </div>
                        <div class="inline-group register-group">
                            <i class="bi bi-person-plus"></i>
                            <input type="text" name="LastName" placeholder="Last Name" maxlength="100" />
                        </div>
                        <div class="inline-group">
                            <i class="bi bi-person"></i>
                            <input type="email" name="Email" placeholder="Email" maxlength="100" autocomplete="off" />
                        </div>
                        <div class="inline-group">
                            <i class="bi bi-key"></i>
                            <input type="password" name="Password" placeholder="Password" maxlength="100" />
                        </div>
                        <div class="inline-group bottom">
                            <a href="#" class="link-action">Sign In</a>
                            <button class="btn btn-action btn-signup">Sign Up</button>
                        </div>
                    </div>
                </div>
                <div class="dash-line">
                    <span>or</span>
                </div>
                <div class="social-login">
                    <button class="btn btn-google">
                        <i class="bi bi-google"></i>
                        <span>Login With Google</span>
                    </button>
                    <button class="btn btn-facebook">
                        <i class="bi bi-facebook"></i>
                        <span>Login With Facebook</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/site.js"></script>
<script src="~/lib/iziToast/js/iziToast.min.js"></script>
<script src="~/js/Component/Notification.js"></script>
<script src="~/js/common.js"></script>
<script src="~/js/Login.js"></script>